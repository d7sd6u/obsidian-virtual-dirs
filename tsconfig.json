{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["src/**/*.ts", "obsidian-typings/src/**/*.d.ts"]
}
